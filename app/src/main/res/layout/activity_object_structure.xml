<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kiam.locationphotoboard.ObjectStructureActivity">

    <Button
        android:text="Add Text Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/putpost"
        android:layout_alignRight="@+id/putpost"
        android:layout_alignEnd="@+id/putpost"
        android:layout_marginTop="62dp"
        android:id="@+id/addtotext" />

    <TextView
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theDate"
        android:layout_alignLeft="@+id/theDate"
        android:layout_alignStart="@+id/theDate"
        android:id="@+id/rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/theDate"
        android:layout_below="@+id/textpost"
        android:layout_alignLeft="@+id/comments"
        android:layout_alignStart="@+id/comments" />

    <TextView
        android:text="Text Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpost"
        android:layout_below="@+id/addtotext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:text="Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/rating"
        android:layout_toLeftOf="@+id/addtotext"
        android:layout_toStartOf="@+id/addtotext" />

    <Button
        android:text="Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/addtotext"
        android:layout_alignEnd="@+id/addtotext"
        android:id="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/putpost"
        android:layout_marginTop="27dp"
        android:hint="enter text you want to post"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/comments"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="82dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="enter your comment"
        android:ems="10"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/comments"
        android:layout_alignStart="@+id/comments"
        android:layout_marginTop="29dp"
        android:id="@+id/editText" />

    <Button
        android:text="POST COMMENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/comments"
        android:layout_toEndOf="@+id/comments"
        android:id="@+id/button3" />

</RelativeLayout>
