<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kiam.locationphotoboard.ObjectStructureActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/putpost"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:hint="enter text you want to post" />

    <Button
        android:text="Add Text Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/putpost"
        android:layout_alignRight="@+id/putpost"
        android:layout_alignEnd="@+id/putpost"
        android:layout_marginTop="62dp"
        android:id="@+id/addtotext" />

    <TextView
        android:text="Text Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpost"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theDate"
        android:layout_alignLeft="@+id/theDate"
        android:layout_alignStart="@+id/theDate"
        android:id="@+id/rating" />

    <TextView
        android:text="Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/comments"
        android:layout_below="@+id/rating"
        android:layout_alignRight="@+id/addtotext"
        android:layout_alignEnd="@+id/addtotext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/theDate"
        android:layout_below="@+id/textpost"
        android:layout_alignLeft="@+id/comments"
        android:layout_alignStart="@+id/comments" />
</RelativeLayout>
