<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kiam.locationphotoboard.MainActivity">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAPS"
        android:id="@+id/mapActivityButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toMapsActivity"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOUD"
        android:id="@+id/cloudActivityButton"
        android:layout_alignBottom="@+id/mapActivityButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="toCloudActivity"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMERA"
        android:id="@+id/cameraActivityButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toCameraActivity"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI "
        android:id="@+id/uiActivityButton"
        android:layout_alignTop="@+id/cameraActivityButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="toUIActivity"/>

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ITGAnalogClock"
        android:layout_above="@+id/uiActivityButton"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBJECT STRUCTURE"
        android:id="@+id/objectActivityButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toObjectStructureActivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ITG CLOCK"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_above="@+id/ITGAnalogClock"
        android:layout_alignLeft="@+id/ITGAnalogClock"
        android:layout_alignStart="@+id/ITGAnalogClock"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Welcome"
        android:ems="10"
        android:id="@+id/tvWelcomeMessage"
        android:layout_below="@+id/uiActivityButton"
        android:layout_toLeftOf="@+id/uiActivityButton"
        android:layout_toStartOf="@+id/uiActivityButton"
        android:layout_marginTop="60dp" />
</RelativeLayout>
