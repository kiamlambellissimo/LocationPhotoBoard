<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kiam.locationphotoboard.MainActivity">
    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ITGAnalogClock"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ITG CLOCK"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_above="@+id/ITGAnalogClock"
        android:layout_alignLeft="@+id/ITGAnalogClock"
        android:layout_alignStart="@+id/ITGAnalogClock"/>

    <Button

        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginActivityButton"
        android:onClick="toLoginActivity"
        android:layout_above="@+id/registerActivityButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="98dp" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerActivityButton"
        android:textSize="14sp"
        android:onClick="toRegisterActivity"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ITGAnalogClock"
        android:layout_toEndOf="@+id/ITGAnalogClock"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="142dp" />

</RelativeLayout>
